{
  "id": "manage",
  "condition": {
    "type": "bool",
    "bool": {
      "and": [
        {
          "type": "authenticated"
        }
      ]
    }
  },
  "groups": [
    {
      "name": "order",
      "description": "order management",
      "permissions": [
        {
          "id": "manage.order.ship",
          "name": "Ship",
          "description": "Ship",
          "actions": [
            {
              "type": "path",
              "pattern": "/order/ship"
            }
          ]
        },
        {
          "id": "manage.order.issueInvoice",
          "name": "Issue an invoice",
          "description": "Issue an invoice",
          "actions": [
            {
              "type": "path",
              "pattern": "/order/issueInvoice"
            }
          ]
        }
      ]
    }
  ]
}
