{
  "$schema": "http://json-schema.org/draft-04/schema",
  "$id": "https://github.com/Ahoo-Wang/CoSec/blob/main/schema/condition.schema.json",
  "title": "CoSec Condition Matcher Schema",
  "type": "object",
  "properties": {
    "bool": {
      "$ref": "#/definitions/boolConditionMatcher"
    },
    "all": {
      "$ref": "#/definitions/allConditionMatcher"
    },
    "authenticated": {
      "$ref": "#/definitions/authenticatedConditionMatcher"
    },
    "inTenant": {
      "$ref": "#/definitions/inTenantConditionMatcher"
    },
    "inRole": {
      "$ref": "#/definitions/inRoleConditionMatcher"
    },
    "path": {
      "$ref": "#/definitions/pathConditionMatcher"
    },
    "rateLimiter": {
      "$ref": "#/definitions/rateLimiterConditionMatcher"
    },
    "groupedRateLimiter": {
      "$ref": "#/definitions/groupedRateLimiterConditionMatcher"
    },
    "ognl": {
      "$ref": "#/definitions/ognlConditionMatcher"
    },
    "spel": {
      "$ref": "#/definitions/spelConditionMatcher"
    },
    "contains": {
      "$ref": "#/definitions/containsConditionMatcher"
    },
    "endsWith": {
      "$ref": "#/definitions/endsWithConditionMatcher"
    },
    "startsWith": {
      "$ref": "#/definitions/startsWithConditionMatcher"
    },
    "eq": {
      "$ref": "#/definitions/eqConditionMatcher"
    },
    "in": {
      "$ref": "#/definitions/inConditionMatcher"
    },
    "regular": {
      "$ref": "#/definitions/regularConditionMatcher"
    }
  },
  "maxProperties": 1,
  "definitions": {
    "tenantType": {
      "enum": [
        "default",
        "user",
        "platform"
      ]
    },
    "part": {
      "enum": [
        "request.path",
        "request.method",
        "request.appId",
        "request.deviceId",
        "request.remoteIp",
        "request.origin",
        "request.referer",
        "request.header.",
        "request.header.cosec-app-id",
        "request.attributes.",
        "request.attributes.ipRegion",
        "request.path.var.",
        "context.tenantId",
        "context.principal.id",
        "context.principal.attributes."
      ]
    },
    "partValue": {
      "anyOf": [
        {
          "$ref": "#/definitions/part"
        },
        {
          "type": "string"
        }
      ]
    },
    "allConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "authenticatedConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "inTenantConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "value": {
          "$ref": "#/definitions/tenantType"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "inRoleConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "rateLimiterConditionMatcher": {
      "type": "object",
      "properties": {
        "permitsPerSecond": {
          "type": "number"
        }
      },
      "required": [
        "permitsPerSecond"
      ],
      "additionalProperties": false
    },
    "groupedRateLimiterConditionMatcher": {
      "type": "object",
      "properties": {
        "part": {
          "$ref": "#/definitions/partValue"
        },
        "permitsPerSecond": {
          "type": "number"
        },
        "expireAfterAccessSecond": {
          "type": "number"
        }
      },
      "required": [
        "part",
        "permitsPerSecond",
        "expireAfterAccessSecond"
      ],
      "additionalProperties": false
    },
    "ognlConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "expression": {
          "type": "string"
        }
      },
      "required": [
        "expression"
      ],
      "additionalProperties": false
    },
    "spelConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "expression": {
          "type": "string"
        }
      },
      "required": [
        "expression"
      ],
      "additionalProperties": false
    },
    "containsConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/partValue"
        },
        "value": {
          "type": "string"
        },
        "ignoreCase": {
          "type": "boolean"
        }
      },
      "required": [
        "part",
        "value"
      ],
      "additionalProperties": false
    },
    "endsWithConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/partValue"
        },
        "value": {
          "type": "string"
        },
        "ignoreCase": {
          "type": "boolean"
        }
      },
      "required": [
        "part",
        "value"
      ],
      "additionalProperties": false
    },
    "startsWithConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/partValue"
        },
        "value": {
          "type": "string"
        },
        "ignoreCase": {
          "type": "boolean"
        }
      },
      "required": [
        "part",
        "value"
      ],
      "additionalProperties": false
    },
    "eqConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/partValue"
        },
        "value": {
          "type": "string"
        },
        "ignoreCase": {
          "type": "boolean"
        }
      },
      "required": [
        "part",
        "value"
      ],
      "additionalProperties": false
    },
    "inConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/partValue"
        },
        "value": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "part",
        "value"
      ],
      "additionalProperties": false
    },
    "regularConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/partValue"
        },
        "pattern": {
          "type": "string",
          "format": "regex"
        }
      },
      "required": [
        "part",
        "pattern"
      ],
      "additionalProperties": false
    },
    "pathConditionMatcher": {
      "type": "object",
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/partValue"
        },
        "pattern": {
          "type": "string"
        },
        "options": {
          "$ref": "definitions.schema.json#/definitions/pathOptions"
        }
      },
      "required": [
        "part",
        "pattern"
      ],
      "additionalProperties": false
    },
    "boolConditionMatcher": {
      "properties": {
        "negate": {
          "type": "boolean"
        },
        "and": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        },
        "or": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    }
  }
}

