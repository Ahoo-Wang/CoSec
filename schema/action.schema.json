{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Ahoo-Wang/CoSec/blob/main/schema/action.schema.json",
  "title": "CoSec Action Matcher Schema",
  "anyOf": [
    {
      "type": "string"
    },
    {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    {
      "type": "object",
      "properties": {
        "path": {
          "$ref": "#/definitions/pathActionMatcher"
        },
        "composite": {
          "$ref": "#/definitions/compositeActionMatcher"
        },
        "all": {
          "$ref": "#/definitions/allActionMatcher"
        }
      }
    }
  ],
  "definitions": {
    "method": {
      "enum": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "OPTIONS",
        "TRACE"
      ]
    },
    "methodValue": {
      "anyOf": [
        {
          "$ref": "#/definitions/method"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/method"
          },
          "uniqueItems": true
        }
      ]
    },
    "allActionMatcher": {
      "type": "object",
      "properties": {
        "method": {
          "$ref": "#/definitions/methodValue"
        }
      }
    },
    "pathActionMatcher": {
      "type": "object",
      "properties": {
        "pattern": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          ]
        },
        "method": {
          "$ref": "#/definitions/methodValue"
        },
        "options": {
          "$ref": "definitions.schema.json#/definitions/pathOptions"
        }
      },
      "required": [
        "pattern"
      ],
      "additionalProperties": false
    },
    "compositeActionMatcher": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "path": {
                "$ref": "#/definitions/pathActionMatcher"
              }
            }
          }
        ]
      },
      "minItems": 1
    }
  }
}


